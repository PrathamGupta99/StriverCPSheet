#include <bits/stdc++.h> 
using namespace std;

void solve() {  
    int n;
    cin >> n;
    int ans = 0, curr = 0;
    int en,ex;
    for(int i = 0; i < n; i++)
    {
        cin>>ex>>en;
        curr-=ex;
        curr+=en;
        ans = max(ans,curr);
    }
    cout<<ans<<endl;
}
int main()
{
    int t=1;
    // cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}
