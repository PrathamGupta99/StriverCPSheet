#include <bits/stdc++.h> 
using namespace std;

void solve() {
    int n;
    cin>>n;
    int k = n-1;
    long long sum = 0;
    for(int i=1; i<n; i++)
    {
        sum = sum + (i*k--);
    }
    sum+=n;
    cout<<sum<<endl;
}
int main()
{
    int t=1;
    // cin>>t;
    while(t--)
    {
        solve();
    }
    return 0;
}
